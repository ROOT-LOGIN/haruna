<UserControl x:Class="haruna.adornments.SimpleAdroner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="tbText" x:FieldModifier="private" IsReadOnly="True" Margin="0,16,0,0" FontFamily="Consolas" HorizontalScrollBarVisibility="Auto" ></TextBox>
        <ToggleButton Content="^" x:Name="togShow" x:FieldModifier="private" Cursor="Arrow" Width="16" Height="16" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="0" Checked="ToggleShow_Checked" Unchecked="ToggleShow_Unchecked" />
        <ToggleButton Content="&lt;" x:Name="togStrecth" x:FieldModifier="private" Cursor="Arrow" Width="16" Height="16" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,18,0" Padding="0" Checked="ToggleStretch_Checked" Unchecked="ToggleStretch_Unchecked" />
    </Grid>
</UserControl>
